<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Row for Serving Size filter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Label for Calories -->
        <TextView
            android:id="@+id/serving_size_filter_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serving Size"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <!-- Spinner for selecting < or > -->
        <Spinner
            android:id="@+id/serving_size_filter_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:entries="@array/filter_inequalities"
            android:background="@drawable/spinner_background" />

        <!-- TextField for entering calorie amount -->
        <EditText
            android:id="@+id/serving_size_filter_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter serving size"
            android:inputType="number" />
    </LinearLayout>

    <!-- Row for Calories filter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Label for Calories -->
        <TextView
            android:id="@+id/calorie_filter_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <!-- Spinner for selecting < or > -->
        <Spinner
            android:id="@+id/calorie_filter_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:entries="@array/filter_inequalities"
            android:background="@drawable/spinner_background" />

        <!-- TextField for entering calorie amount -->
        <EditText
            android:id="@+id/calorie_filter_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter calories"
            android:inputType="number" />
    </LinearLayout>

    <!-- Row for Protein filter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Label for Calories -->
        <TextView
            android:id="@+id/protein_filter_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protein"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <!-- Spinner for selecting < or > -->
        <Spinner
            android:id="@+id/protein_filter_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:entries="@array/filter_inequalities"
            android:background="@drawable/spinner_background" />

        <!-- TextField for entering calorie amount -->
        <EditText
            android:id="@+id/protein_filter_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter protein (g)"
            android:inputType="number" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"
        android:background="#aaa" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/dietary_options_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.Chip
            android:id="@+id/option_vegetarian"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anytime"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.Chip
            android:id="@+id/option_gluten_free"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.Chip
            android:id="@+id/option_sugar_free"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.Chip
            android:id="@+id/option_sugar_free"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner"
            tools:ignore="HardcodedText" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Row for Cancel and Apply buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancel_filter_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF" />

        <!-- Apply Button -->
        <Button
            android:id="@+id/apply_filter_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Apply"
            android:backgroundTint="#00aa00"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <!-- White Background Layer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"/>

    <!-- Main Content Layer -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:id="@+id/item_task"
        android:paddingVertical="4dp"
        android:background="@android:color/white">

        <!-- Left Rectangle -->
        <View
            android:id="@+id/left_rectangle"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/itemList" />

        <!-- Circle ImageView -->
        <ImageView
            android:id="@+id/circle_button"
            android:layout_width="27.5dp"
            android:layout_height="27.5dp"
            android:background="@android:color/white"
            android:src="@drawable/ic_circle"
            android:contentDescription="Bullet Icon"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY" />

        <!-- Input Text Box -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_task_input"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:hint="Grocery Item"/>

        <!-- Checkmark Button -->
        <ImageButton
            android:id="@+id/checkmarkButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="6.5dp"
            android:background="@android:color/white"
            android:src="@drawable/ic_check_out"
            android:contentDescription="Checkmark Icon"
            android:padding="4dp"
            android:scaleType="fitCenter" />

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/deleteTaskButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="6.5dp"
            android:background="@android:color/white"
            android:src="@drawable/ic_trash_can"
            android:contentDescription="Delete Icon"
            android:padding="4dp"
            android:scaleType="fitCenter" />
    </LinearLayout>
</FrameLayout>

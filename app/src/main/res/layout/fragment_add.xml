<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdfdf"
    tools:context=".fragments.AddFragment">

    <!-- Scrollable container for inputs -->
    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Meal Title Input -->
            <include
                layout="@layout/item_list"
                android:id="@+id/meal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!-- Meal Description Input -->
            <include
                layout="@layout/item_list"
                android:id="@+id/meal_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Meal Nutrition Input -->
            <include
                layout="@layout/item_list"
                android:id="@+id/meal_nutrition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Serving Size Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/serving_size_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Serving Size"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/serving_size_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., 1 cup"
                    android:inputType="text"/>
            </LinearLayout>

            <!-- Nutrition Facts Input (Text Boxes) -->
            <TextView
                android:id="@+id/nutrition_facts_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nutrition Facts"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/calories_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Calories (e.g., 200)"
                android:inputType="number"/>

            <EditText
                android:id="@+id/fat_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fat (g)"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/carbs_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Carbohydrates (g)"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/protein_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Protein (g)"
                android:inputType="numberDecimal"/>

            <!-- Options Section -->
            <TextView
                android:id="@+id/options_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Options"
                android:textColor="#000000"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/option_vegan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegan" />

            <CheckBox
                android:id="@+id/option_vegetarian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegetarian" />

            <CheckBox
                android:id="@+id/option_gluten_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gluten-Free" />

            <CheckBox
                android:id="@+id/option_dairy_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dairy-Free" />

            <!-- Grid Layout for Image Addition -->
            <GridLayout
                android:id="@+id/image_add_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:padding="16dp"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <include layout="@layout/image_add" android:id="@+id/image_add1"/>
                <include layout="@layout/image_add" android:id="@+id/image_add2"/>
                <include layout="@layout/image_add" android:id="@+id/image_add3"/>
                <include layout="@layout/image_add" android:id="@+id/image_add4"/>
            </GridLayout>

            <!-- Category Selection Section -->
            <LinearLayout
                android:id="@+id/category_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/pick_category_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Pick a Category"/>

                <!-- Category Buttons (hidden by default) -->
                <LinearLayout
                    android:id="@+id/category_buttons_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="16dp">

                    <Button
                        android:id="@+id/breakfast_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Breakfast"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#6200EE"/>

                    <Button
                        android:id="@+id/lunch_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Lunch"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#6200EE"/>

                    <Button
                        android:id="@+id/dinner_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Dinner"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#6200EE"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Ingredients Section -->
            <LinearLayout
                android:id="@+id/ingredients_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Ingredients Label -->
                <TextView
                    android:id="@+id/ingredients_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ingredient"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Ingredients"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <!-- Add Ingredient Button (Overlayed) -->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/add_ingredient_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp"
                    android:src="@android:drawable/ic_input_add"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add Ingredient" />
            </LinearLayout>

            <!-- Directions Section -->
            <LinearLayout
                android:id="@+id/directions_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Directions Label -->
                <TextView
                    android:id="@+id/directions_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/step"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Directions"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <!-- Add Direction Button (Overlayed) -->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/add_direction_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp"
                    android:src="@android:drawable/ic_input_add"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add Direction" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
